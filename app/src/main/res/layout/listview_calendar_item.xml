<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="false"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="false"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/listview_background"
    android:foregroundGravity="center"
    android:padding="10dp"
    app:layout_anchorGravity="center">

    <TextView
        android:id="@+id/calendarName"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/nanum_square_round_bold_style"
        android:gravity="center"
        android:maxLength="6"
        android:text="이름"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calendarRemainDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/nanum_square_round_bold_style"
        android:gravity="center"
        android:text="남은 기간"
        app:layout_constraintBaseline_toBaselineOf="@+id/calendarName"
        app:layout_constraintStart_toEndOf="@+id/calendarName" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_square_round_bold_style"
        android:text="일 남았습니다!"
        app:layout_constraintBaseline_toBaselineOf="@+id/calendarRemainDays"
        app:layout_constraintStart_toEndOf="@+id/calendarRemainDays" />
</androidx.constraintlayout.widget.ConstraintLayout>